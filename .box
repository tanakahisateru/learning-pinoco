################################################
## GENERAL SETTINGS
################################################
shared_writable_dirs:
    - /tmp

url_rewrites:
    - ^(.*/)$        _gateway.php?PATH_INFO=/$1
    - ^(.*\.html)$   _gateway.php?PATH_INFO=/$1
    - ^(.*/_.*)$     _gateway.php?PATH_INFO=/$1
    # how can i detect file existence?

permissions:
    /_app :
        - all: deny

################################################
## WEB SPECIFIC SETTINGS
################################################
document_root: /
index_list: [index.html, index.php]
default_gateway: _gateway.php
error_pages: []
#    404: /404.html

################################################
## PHP SPECIFIC SETTINGS
################################################
php_version: 5.3.6
php_extensions: [eaccelerator, mysql]
php_error_reporting: 'E_ALL'
php_display_errors: On
php_short_open_tag: On
php_default_mimetype: text/html
php_date_timezone: US/central
php_max_execution_time: 30
php_max_input_time: 60
php_post_max_size: 8M
php_file_uploads: On
php_upload_max_filesize: 2M
php_max_file_uploads: 20

